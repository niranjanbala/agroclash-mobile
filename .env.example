# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Service Configuration (set to 'true' to use mock services)
USE_MOCK_WEATHER=true
USE_MOCK_MARKET=true
USE_MOCK_PEST=true
USE_MOCK_NOTIFICATIONS=true

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_REALTIME_UPDATES=true

# Development Settings
ENABLE_DEBUG_LOGS=true
MOCK_DATA_SEED=default-seed

# External API Keys (for production)
OPENWEATHER_API_KEY=your_openweather_api_key
KRISHIHUB_API_KEY=your_krishihub_api_key